{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-gemini-auth@latest"],
  "permission": {
    "bash": {
      "git commit*": "ask",
      "git add*": "ask",
      "git push*": "ask",
      "git pull*": "ask",
      "git merge*": "ask",
      "git rebase*": "ask",
      "git reset*": "ask",
      "git checkout*": "ask",
      "git status": "allow",
      "git log": "allow",
      "git diff": "allow",
      "git branch": "allow"
    }
  }
}
